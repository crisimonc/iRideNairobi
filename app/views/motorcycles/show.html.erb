            </div>
          <% else %>
              <%= link_to "Book #{@motorcycle.name} now", new_user_registration_path(moto: params[:id], search: {starts_at: params["search"]["starts_at"], ends_at: params["search"]["ends_at"]}) %>
          <% end %>
        </button>
      </div>
      <div class="row-fluid">
          <br>
          <p><%= @motorcycle.motor_type  %></p>
          <br>
          <p><%= @motorcycle.description  %></p>
          <br>
          <p style="font-weight:bold" align="center" id="big-font"><%= @motorcycle.price.to_s + " USD per day" %></p>
      </div>
      <div class="row-fluid">
         <div class="card">
            <p>
              <%= pluralize @motorcycle.reviews.size, "review" %>
            </p>
            <br>
            <% @motorcycle.reviews.each do |review|%>
              <% review.stars.times do%>
                <i class="far fa-star"></i>
              <% end %>
              <br>
              <p><%= review.content %></p>
              <br>
            <% end %>
          </div>
      </div>

    </div>
  </div>


</div>
