<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-6">
      <div id="motorcycle-image">
        <% if @motorcycle.uploaded_photo.present? %>
          <%= cl_image_tag(@motorcycle.uploaded_photo) %>
        <% else %>
          <%= image_tag(@motorcycle.picture) %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row-fluid">
        <button id="book-moto-btn">
          <% if user_signed_in? %>
